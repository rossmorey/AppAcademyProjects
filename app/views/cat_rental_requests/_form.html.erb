<% if errors %>
  Errors:
  <ul>
  <% errors.each do |error| %>
    <li><%= error %></li>
  <% end  %>
  </ul>
<% end %>

<form action=<%= action == :new ? cat_rental_requests_url : cat_cat_rental_request_url(cat_id: request.cat_id, id: request.id) %> method="post" >
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <label>
    Cat:
    <select name="cat_rental_request[id]">
      <option selected disabled> </option>
      <% cats.each do |cat| %>
        <option value="<%= cat.id %>" <%= "selected" if request.cat_id == cat.id %> >
          <%= cat.name %>
        </option>
      <% end %>

    </select>
  </label>
  <label>
    Start date:
    <input type="date" name="cat_rental_request[start_date]" value="<%= request.start_date %>">
  </label>
  <label>
    End date:
    <input type="date" name="cat_rental_request[end_date]" value="<%= request.end_date %>">
  </label>




  <input type="submit" value="Submit">


</form>
